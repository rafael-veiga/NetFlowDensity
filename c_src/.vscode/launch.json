{
    "version": "0.2.0",
    "configurations": [
      
      {
        "name": "Debug app",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/app",
        "args": ["r", "file1.csv","sample.dat"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "preLaunchTask": "build",
        "setupCommands": [
          {
            "description": "Habilita impressão de variáveis com formato legível",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ]
      }
    ]
  }
  