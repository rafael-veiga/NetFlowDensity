{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "type": "shell",
        "command": "g++",
        "args": [
          "-std=c++17",
          "-lstdc++fs",
          "-g",
          "-Iinclude",
          "src/*.cpp",
          "-o",
          "build/app"
        ],
        "group": "build",
        "problemMatcher": [
          "$gcc"
        ],
        "detail": "Compila todos os arquivos .cpp em src/ e gera build/app"
      },
      {
        "label": "C/C++: Build Active File",
        "type": "shell",
        "command": "g++",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "detail": "Compila o arquivo ativo."
      }
    ]
  }
  